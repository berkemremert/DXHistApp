<Window x:Class="DXHistApp.Views.ChartPropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:DXHistApp.ViewModels"
        Title="Chart Properties Editor"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- DataTemplate for Boolean properties -->
        <DataTemplate x:Key="BooleanPropertyTemplate">
            <CheckBox IsChecked="{Binding EditorValue, Mode=TwoWay}"
                      VerticalAlignment="Center" />
        </DataTemplate>

        <!-- DataTemplate for Enum properties -->
        <DataTemplate x:Key="EnumPropertyTemplate">
            <ComboBox ItemsSource="{Binding EnumValues}"
                      SelectedItem="{Binding EditorValue, Mode=TwoWay}"
                      MinWidth="150" />
        </DataTemplate>

        <!-- DataTemplate for Text properties -->
        <DataTemplate x:Key="TextPropertyTemplate">
            <TextBox Text="{Binding EditorValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     MinWidth="150" />
        </DataTemplate>
		
	<!-- DataTemplate selector for different property types -->
        <viewModels:PropertyEditorTemplateSelector x:Key="PropertyEditorTemplateSelector"
                                                   BooleanTemplate="{StaticResource BooleanPropertyTemplate}"
                                                   EnumTemplate="{StaticResource EnumPropertyTemplate}"
                                                   TextTemplate="{StaticResource TextPropertyTemplate}" />

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Properties ScrollViewer -->
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Auto"
                      Padding="10">
            <ItemsControl ItemsSource="{Binding Categories}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Header}"
                                  IsExpanded="{Binding IsExpanded, Mode=TwoWay}"
                                  Margin="0,5,0,5">
                            <ItemsControl ItemsSource="{Binding Properties}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       VerticalAlignment="Center"
                                                       ToolTip="{Binding Description}" />

                                            <ContentPresenter Grid.Column="1"
                                                              Content="{Binding}"
                                                              ContentTemplateSelector="{StaticResource PropertyEditorTemplateSelector}" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons Panel -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="10">
            <Button Content="Apply Changes"
                    Command="{Binding ApplyChangesCommand}"
                    Width="100"
                    Height="30"
                    Margin="5" />

            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Width="75"
                    Height="30"
                    Margin="5" />
        </StackPanel>
    </Grid>
</Window>