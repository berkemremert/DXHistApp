<Window x:Class="DXHistApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
        Title="DXHistApp - DevExpress Histogram Demo" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar with controls -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Buttons Row -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left" 
                        Margin="0,0,0,10">

                <Button Content="Show Chart Designer" 
                        Command="{Binding ShowDesignerCommand}"
                        Padding="10,5" 
                        Background="#FF007ACC" 
                        Foreground="White"
                        BorderBrush="#FF005A9E"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"/>

                <Button Content="Show Properties" 
                        Command="{Binding ShowPropertiesCommand}"
                        Padding="10,5" 
                        Background="#FF6F42C1" 
                        Foreground="White"
                        BorderBrush="#FF5A2D91"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"/>

                <Button Content="Save XML" 
                        Command="{Binding SaveXmlCommand}"
                        Padding="10,5" 
                        Background="#FF17A2B8" 
                        Foreground="White"
                        BorderBrush="#FF138496"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"/>

                <Button Content="Load XML" 
                        Command="{Binding LoadXmlCommand}"
                        Padding="10,5" 
                        Background="#FF6C757D" 
                        Foreground="White"
                        BorderBrush="#FF545B62"
                        FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>

        <!-- Chart Control -->
        <dxc:ChartControl x:Name="chartControl" 
                          Grid.Row="1" 
                          Margin="10">
            <dxc:ChartControl.Titles>
                <dxc:Title HorizontalAlignment="Center" 
                           Content="Sample Data Histogram"
                           FontSize="16"
                           FontWeight="Bold"/>
            </dxc:ChartControl.Titles>

            <!-- Legend -->
            <dxc:ChartControl.Legend>
                <dxc:Legend HorizontalPosition="Right" 
                            VerticalPosition="Top"
                            Orientation="Vertical"/>
            </dxc:ChartControl.Legend>
        </dxc:ChartControl>
    </Grid>
</Window>